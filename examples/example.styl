@require "../index.styl";

tw-reset();
tw-tailwind();

body {
  background: -teal-50;
  font-family: sans-serif;
  padding: 16;
}

.box {
  background: white;
  shadow: lg;
  rounded: lg;
  padding: 0 16;

  &_title {
    bold();
  }
}

.animation {
  background: rgba(66, 153, 225, 0.5);
  absolute: top 100px left 100px;
  background: red;
  // tw tw-transform
  do: transform-gpu;
  transform-scale: 50;
  transform-rotate: 90;
}

button {
  ring: 3;
  do: animation;
  // tw-animation go
  tw: grow vscroll;
}

// tw-animation default
.list {
  // border 1px solid red
